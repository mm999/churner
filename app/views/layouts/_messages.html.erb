<style>
.alert-danger {
	background: #E03616;
}

.alert-success {
	background: #61E786;
}

.alert-info {
	background: #7FC9FF;
}

.alert-warning {
	background: #FFA654;
}

.close-button {
	float: right;
	height: 32.0938px;
	font-size: 140%;
	background: white;
	margin-right: 0.5%;
	margin-top: 5px;
	margin-bottom: 5px;
	padding-right: 0.5em;
	padding-left: 0.5em;
	line-height: 0px;
}

.alert {
	height: 42.0938px;
	border: none;
	margin: none;
}

.alert-text {
	float: left;
	color: white;
	line-height: 42.0938px;
	padding-left: 1%;
}
</style>

<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
    	<%= content_tag :div, msg, :id => "flash_#{name}", :class => "alert-text" %>
      <button class="close close-button pure-button" data-dismiss="alert" aria-hidden="true">&times;</button>
    </div>
  <% end %>
<% end %>
