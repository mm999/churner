<body class='body-registration-override'>
  <div class='content'>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => 'login-card pure-form', :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      <h1>Password Reset</h1><br>
      <%= f.hidden_field :reset_password_token %>
      <%= f.password_field :password, autofocus: true, autocomplete: 'off', :placeholder => 'New Password', :class => "pure-input-1-1 login-card-input", :required => true %>
      <%= f.password_field :password_confirmation, autocomplete: 'off', :placeholder => 'Confirm New Password', :class => "pure-input-1-1 login-card-input", :required => true %>
      <%= f.submit 'Change My Password', :class => 'login login-submit pure-button' %>
    <% end %>
  </div>
</body>
