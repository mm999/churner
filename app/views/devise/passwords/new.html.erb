<div class="header">
  <h1>Forgot your password?</h1>
  <h2>Enter your email and we will send password reset instructions</h2>
</div>

<div class="content">
  <p>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "pure-form pure-form-stacked", :method => :post, :role => 'form'}) do |f| %>
      <%= devise_error_messages! %>
      <div class="pure-control-group">
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>
       <%= f.submit 'Reset Password', :class => 'pure-button' %>
    <% end %>
  </p>
</div>
