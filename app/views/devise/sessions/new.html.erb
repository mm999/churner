<div class='container'>
  <div class='auth-container card-panel'>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'input-field', :role => 'form'}) do |f| %>
      <h4>Sign In</h4>
      <%= devise_error_messages! %>
      <%= f.email_field :email, :autofocus => true, :placeholder => 'Email', :required => true %>
      <%= f.password_field :password, :placeholder => 'Password', :required => true %>
      <% if devise_mapping.rememberable? %>
        <p class="p-override">
          <input name="user[remember_me]" type="hidden" value="0">
          <input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">
          <label for="user_remember_me" class="check-override">Stay Signed In?</label>
        </p>
      <% end %>
      <div class="row valign-wrapper">
        <div class="col s6">
          <button class="btn waves-effect waves-light" type="submit" name="commit">Sign In</button>
        </div>
        <div class="col s6">
          <%- if devise_mapping.recoverable? %>
            <%= link_to 'Forgot password?', new_password_path(resource_name), :class => "right" %>
          <% end -%>
        </div>
      </div>
      <!-- Seperation character here to use later if two links to show â€¢ -->
    <% end %>
  </div>
</div>