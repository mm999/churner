<div class='container'>
	<div class="auth-container card-panel">
	  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'input-field', :role => 'form'}) do |f| %>
	    <h4>Sign up</h4>
	    <%= devise_error_messages! %>
	    <%= f.email_field :email, :placeholder => 'Email', :required => true %>
	    <%= f.password_field :password, :placeholder => 'Password', :required => true %>
	    <%= f.password_field :password_confirmation, :placeholder => 'Confirm Password', :required => true %>
	    <button class="btn waves-effect waves-light" type="submit" name="commit">Sign Up</button>
	  <% end %>
  </div>
</div>